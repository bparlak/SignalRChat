@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}



<form asp-action="Login" asp-controller="Home" method="post">
    <div class="col-12 col-xl-5 col-lg-5 col-md-7 mx-auto mt-5">
        <h1 class="text-center text-uppercase">Login Chat</h1>
        <div class="row">
            <label class="col-4 mt-2">Username</label>
            <input asp-for="Username" type="text" name="UserName" placeholder="Username" class="col-8 form-control" value="" />
        </div>
        <div class="row">
            <label class="col-4 mt-2">Password</label>
            <input asp-for="Password" type="password" name="password" placeholder="Password" class="col-8 form-control" value="" />
        </div>
        <div class="row">
            <label class="col-4 mt-2">Email(Optional)</label>
            <input asp-for="Email" type="email" name="Email" placeholder="Email" class="col-8 form-control" value="" />
        </div>
        <div class="mt-3 text-center">
            <input type="submit" name="Login" class="col-8 btn btn-primary" value="Login" />
        </div>
    </div>
</form>